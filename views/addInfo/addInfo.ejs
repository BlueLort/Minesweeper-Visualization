<%include ../header%>
 <link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
<style type="text/css">

   body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f2fcfc;
      }

      .infoForm {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
       .infoForm .form-signin-heading,
       .infoForm input[type="text"]{
        font-size: 20px;
        height: auto;
        margin-bottom: 15px;
        padding-right: 10px;
        padding: 7px 9px;
      }
</style>
<body>
<div class="container">
<form class="infoForm" action="/addcell" method="POST">
    <h1 class="form-signin-heading">Add New Cell</h1>
   <input type="text" autocomplete="off" class="input-block-level" name="row" placeholder="Row" required>
   <input type="text" autocomplete="off"  class="input-block-level" name="col" placeholder="Column" required>
   <select name="type" class="form-control">
    <option value="EMPTY_CELL">Empty Cell</option>
    <option value="SURFACE_MINE">Surface Mine</option>
    <option value="BURIED_MINE">Buried Mine</option>
   </select>
   <button class="btn btn-large btn-primary" style="margin-top:15px">Add Cell</button>
</form>
</div>
<div class="container">
<form class="infoForm" action="/currentcell" method="POST">
    <h1 class="form-signin-heading">Current Cell Information</h1>
   <input type="text" autocomplete="off" class="input-block-level" name="row" placeholder="Row" required>
   <input type="text" autocomplete="off" class="input-block-level" name="col" placeholder="Column" required>
   <button class="btn btn-large btn-primary" style="margin-top:15px">Refresh Current Cell</button>
</form>
</div>
</body>

<%include ../footer%>